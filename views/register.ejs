<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body text-center">
      <h1 class="mb-3">
        <img src="/assets/register.png" alt="icon" width="20%" />
      </h1>
      <h2>
        Register New User
      </h2>
      <%- include ("./partials/flash-messages") %>
      <form action="/auth/register" method="POST">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="name" id="name" name="name" class="form-control" placeholder="Enter Name"
            value="<%= typeof name != 'undefined' ? name : '' %>" />
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email"
            value="<%= typeof email != 'undefined' ? email : '' %>" />
        </div>
        <%- include ("./partials/password-form") %>
        <button type="submit" class="btn btn-primary btn-block">
          Register
        </button>
      </form>
      <p class="mt-4">Already have an account? <a href="/auth/login">Login</a></p>
    </div>
  </div>
</div>